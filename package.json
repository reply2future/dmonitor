{
  "name": "dmonitor",
  "version": "0.4.0",
  "description": "The monitor of the computer.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:debug": "NODE_ENV=development electron .",
    "format": "npx standard --fix",
    "test": "npx mocha test",
    "coverage": "nyc --reporter=lcov npm test",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reply2future/dmonitor.git"
  },
  "keywords": [
    "monitor",
    "electron",
    "nodejs"
  ],
  "author": "feimei.zhan@live.com",
  "license": "GPL-2.0-only",
  "bugs": {
    "url": "https://github.com/reply2future/dmonitor/issues"
  },
  "homepage": "https://github.com/reply2future/dmonitor#readme",
  "build": {
    "appId": "com.reply2future.dmonitor",
    "mac": {
      "category": "utilities",
      "icon": "asserts/icon.png",
      "extendInfo": {
        "LSUIElement": 1
      }
    }
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "electron": "^19.0.1",
    "electron-builder": "^23.0.3",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^14.0.0",
    "standard": "^17.0.0"
  },
  "dependencies": {
    "@reply2future/pidusage": "^3.1.0",
    "electron-log": "^4.4.7",
    "electron-store": "^8.0.2",
    "pidtree": "^0.5.0"
  }
}
